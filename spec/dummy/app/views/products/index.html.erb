<h1>Products</h1>
<%= link_to "New", new_product_path %>
<ul>
  <% @products.each do |product| %>
    <%= content_tag_for(:li, product) do %>
      <%= product.name %> - <%= product.category_ids.inspect %> <%= link_to "Edit", edit_product_path(product), :id => dom_id(product) %>
    <% end %>
  <% end %>
</ul>
