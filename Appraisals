# Appraisals
appraise "rails-3.2" do
  gem "rails", "~> 3.2.1"
  gem "test-unit", "~> 3.0"
  gem "strong_parameters"
end

if RUBY_VERSION > "1.9.3"
  appraise "rails-4.0" do
    gem "rails", "~> 4.0.1"
  end

  appraise "rails-4.1" do
    gem "rails", "~> 4.1.1"
  end

  appraise "rails-4.2" do
    gem "rails", "~> 4.2.1"
  end
end